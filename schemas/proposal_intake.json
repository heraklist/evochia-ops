{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ProposalIntake",
  "type": "object",
  "required": ["request_id", "event", "menu", "commercials", "policy", "meta"],
  "properties": {
    "request_id": {"type": "string"},
    "client": {
      "type": "object",
      "properties": {
        "name": {"type": ["string", "null"]},
        "email": {"type": ["string", "null"]},
        "phone": {"type": ["string", "null"]}
      }
    },
    "event": {
      "type": "object",
      "required": ["event_date", "guest_count", "service_type", "event_style"],
      "properties": {
        "event_date": {"type": "string"},
        "guest_count": {"type": "integer", "minimum": 1},
        "location_text": {"type": ["string", "null"]},
        "service_type": {"type": "string", "enum": ["DEL", "CAT", "PC"]},
        "event_style": {"type": "string", "enum": ["finger", "plated", "buffet", "ombre_et_desir"]},
        "template_hint": {"type": ["string", "null"]}
      }
    },
    "menu": {
      "type": "object",
      "properties": {
        "theme": {"type": ["string", "null"]},
        "tier": {"type": "string", "enum": ["standard", "premium"]},
        "course_categories": {"type": "array", "items": {"type": "string"}},
        "excludes_list": {"type": "array", "items": {"type": "string"}},
        "notes": {"type": ["string", "null"]}
      }
    },
    "commercials": {
      "type": "object",
      "properties": {
        "budget_per_person": {"type": ["number", "null"]},
        "budget_total": {"type": ["number", "null"]},
        "deposit_pct": {"type": "number"},
        "discount_pct": {"type": "number"}
      }
    },
    "policy": {
      "type": "object",
      "properties": {
        "phase": {"type": "integer"},
        "policies_path": {"type": "string"}
      }
    },
    "meta": {
      "type": "object",
      "properties": {
        "channel": {"type": "string"},
        "source_text": {"type": "string"},
        "created_at": {"type": "string"},
        "intake_transcript_ref": {"type": "string"}
      }
    }
  }
}
